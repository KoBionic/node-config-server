{
  "name": "@kobionic/node-config-server",
  "version": "1.6.0-SNAPSHOT",
  "private": false,
  "description": "Centralized configuration server providing a dynamic RESTful API, allowing retrieval of entire files content or their parsed properties.",
  "keywords": [
    "cloud",
    "configuration",
    "docker",
    "javascript",
    "micro-services",
    "node",
    "rest",
    "server",
    "typescript"
  ],
  "homepage": "https://github.com/KoBionic/node-config-server",
  "bugs": {
    "url": "https://github.com/KoBionic/node-config-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KoBionic/node-config-server.git"
  },
  "license": "Apache-2.0",
  "author": "Jeremie Rodriguez <contact@jeremierodriguez.com> (https://github.com/jeremiergz)",
  "files": [
    "dist/"
  ],
  "main": "dist/bin/www.js",
  "bin": {
    "ncs": "dist/bin/www.js",
    "node-config-server": "dist/bin/www.js"
  },
  "scripts": {
    "assets": "copyfiles --up 1 src/**/*.json --exclude src/**/test.json dist",
    "build": "npm run clean && tsc",
    "postbuild": "npm run assets && node postbuild.js",
    "build:w": "npm run build -- --watch",
    "clean": "rimraf dist",
    "lint": "tslint --project . --format codeFrame",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint",
    "start": "node dist/bin/www.js",
    "start:w": "nodemon --ext ts --watch src --ignore src/**/*.spec.ts --exec ts-node src/bin/www.ts",
    "test": "NODE_ENV=test LOG_WEBSOCKET=false LOG_DIR=logs LOG_LEVEL=none jest --coverage --verbose --forceExit --detectOpenHandles",
    "test:cc": "jest --clearCache",
    "version": "echo $npm_package_version"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testEnvironment": "node",
    "testRegex": ".+.spec.ts$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "dependencies": {
    "@kobionic/server-lib": "1.0.0-SNAPSHOT",
    "ajv": "6.5.0",
    "app-root-path": "2.0.1",
    "body-parser": "1.18.3",
    "chokidar": "2.0.3",
    "cors": "2.8.4",
    "express": "4.16.3",
    "helmet": "3.12.1",
    "ini": "1.3.5",
    "js-yaml": "3.11.0",
    "lodash": "4.17.10",
    "moment": "2.22.1",
    "properties": "1.2.1",
    "socket.io": "2.1.1",
    "strip-ansi": "4.0.0",
    "winston": "2.4.2",
    "xml2js": "0.4.19"
  },
  "devDependencies": {
    "@types/app-root-path": "1.2.4",
    "@types/body-parser": "1.17.0",
    "@types/chokidar": "1.7.5",
    "@types/cors": "2.8.4",
    "@types/express": "4.11.1",
    "@types/helmet": "0.0.37",
    "@types/ini": "1.3.29",
    "@types/jest": "22.2.3",
    "@types/js-yaml": "3.11.1",
    "@types/lodash": "4.14.109",
    "@types/node": "8.10.17",
    "@types/socket.io": "1.4.34",
    "@types/supertest": "2.0.4",
    "@types/winston": "2.3.9",
    "@types/xml2js": "0.4.2",
    "copyfiles": "2.0.0",
    "jest": "23.1.0",
    "nodemon": "1.17.5",
    "supertest": "3.1.0",
    "ts-jest": "22.4.6",
    "ts-node": "6.0.5",
    "tslint": "5.10.0",
    "typescript": "2.9.1"
  },
  "engines": {
    "node": ">=8"
  },
  "publishConfig": {
    "access": "public"
  }
}
